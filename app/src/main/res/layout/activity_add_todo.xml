<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/announcement_header_color">

        <TextView
            android:id="@+id/addTodo_pageName"
            style="@style/txt_style_todo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="19sp"
            android:gravity="center"
            android:hint="Title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/text_color_white">
        </View>

        <LinearLayout
            android:id="@+id/addTodo_layout_startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:text="Start Date"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/addTodo_startDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.6"
                android:text="..."
                android:textColor="@color/ColorPrimary"
                android:gravity="right|center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addTodo_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"
                    android:scaleType="centerInside"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/line_style_todo_info"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        </View>

        <LinearLayout
            android:id="@+id/addTodo_layout_endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:text="End Date"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/addTodo_endDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3"
                android:text="..."
                android:textColor="@color/ColorPrimary"
                android:gravity="right|center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addTodo_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"
                    android:scaleType="centerInside"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/line_style_todo_info"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        </View>

        <LinearLayout
            android:id="@+id/addTodo_layout_subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/addTodo_subTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.1"
                android:hint="SubTitle"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

        <View
            style="@style/line_style_todo_info"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        </View>

        <LinearLayout
            android:id="@+id/addTodo_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/addTodo_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.1"
                android:hint="Content"
                android:textColor="@color/text_color_white"
                android:gravity="left|center"
                android:textSize="18sp"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

        <View
            style="@style/line_style_todo_info"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="7">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:text="Kaydet"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_weight="0.8" />
             
        </LinearLayout>
    </LinearLayout>

</LinearLayout>